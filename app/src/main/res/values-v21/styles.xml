<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
      <style name="Theme.FreemeVoiceAssistant" parent="@android:style/Theme.Material.Light.DarkActionBar">
            <item name="android:colorPrimary">@android:color/transparent</item>
            <item name="android:actionBarStyle">@style/ActionBarStyle</item>
            <item name="android:colorPrimaryDark">@android:color/transparent</item>
            <item name="android:windowBackground">@drawable/main_bg</item>
        </style>
        <style name="ActionBarStyle" parent="android:Widget.Material.ActionBar.Solid">
            <item name="android:elevation">0dp</item>
            <item name="android:titleTextStyle">@style/ActionBarTitle</item>
        </style>
    <style name="ActionBarTitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/sr_item_title_text_size</item>
    </style>

    <style name="Theme.UpdateSettingActivity" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@android:color/transparent</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/main_bg</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>