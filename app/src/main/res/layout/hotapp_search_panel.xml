<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TalkItemStyle" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!-- hot-app list -->
        <LinearLayout
            android:id="@+id/app_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="vertical"
            android:padding="8dp" />
        <FrameLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_list"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="@dimen/calling_cancel_margin_top"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/calling_cancel_margin_top"
             >

            <TextView
                android:id="@+id/download"
                style="@style/buttonText"
                android:layout_width="0dip"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:background="@drawable/cancel_bg"
                android:text="@string/btn_download" />

            <TextView
                android:id="@+id/description"
                style="@style/buttonText"
                android:layout_width="0dip"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:background="@drawable/do_right_bg"
                android:text="@string/btn_description" />
            

        </LinearLayout>
        </FrameLayout>
    </RelativeLayout>

</FrameLayout>