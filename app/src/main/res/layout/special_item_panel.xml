<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TalkItemStyle"
    android:orientation="vertical"
    android:background="@drawable/panel_list_item"
    >

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recording_button_heightandwidget"
         >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/icon_widthandheight"
            android:layout_height="@dimen/icon_widthandheight"
            android:layout_centerVertical="true" />
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon"
            android:orientation="vertical"
            android:layout_marginLeft="6dp"
            android:layout_centerVertical="true" >
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sr_item_title_text_size"
                android:textColor="@color/sr_item_title_color" />
            <TextView
                android:id="@+id/hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="@dimen/sr_item_hint_text_size"
                android:textColor="@color/sr_item_hint_color" />
        </LinearLayout>

        <ImageView
            android:id="@+id/next_ind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/next_ind"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>