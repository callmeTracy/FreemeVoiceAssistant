<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="@dimen/contact_photo_width"
        android:layout_height="@dimen/contact_photo_height"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_default_contact_photo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/photo"
        android:duplicateParentState="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:singleLine="true"
            android:textColor="@drawable/contact_name_text_color"
            android:textSize="@dimen/sr_item_title_text_size" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:textColor="@drawable/contact_number_text_color"
            android:textSize="@dimen/sr_item_title_text_size" />
    </LinearLayout>

    <ImageView
        android:id="@+id/line"
        style="@style/SplitLineStyle"
        android:layout_alignParentBottom="true" />

</RelativeLayout>