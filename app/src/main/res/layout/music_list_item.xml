<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/music_list_item_min_height"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/music_list_item_margin_left"
        android:layout_centerVertical="true"
        android:duplicateParentState="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@drawable/contact_name_text_color"
            android:textSize="@dimen/sr_item_title_text_size"
            android:duplicateParentState="true" />

        <TextView
            android:id="@+id/artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/contact_number_text_color"
            android:textSize="@dimen/prompt_item_hint_text_size"
            android:duplicateParentState="true" />
    </LinearLayout>
    
    <ImageView
        android:id="@+id/line"
        style="@style/SplitLineStyle"
        android:layout_alignParentBottom="true" />

</RelativeLayout>